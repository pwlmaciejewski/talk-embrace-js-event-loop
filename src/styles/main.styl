@import 'nib' // CSS3 extensions for Stylus: http://visionmedia.github.io/nib/

// variables!

slide_width = 100%
slide_height = 100%
slide_background = #1f282d

slide_transition_length = .6s
slide_transition_easing = ease
slide_transition_translate_x = 0
slide_transition_rotate_y = 0

bullet_transition_length = .3s
bullet_transition_easing = ease
bullet_transition_translate_x = 16px

// base

*
  box-sizing: border-box
  margin: 0
  padding: 0

@media print
  *
    -webkit-print-color-adjust: exact

@page
  size: landscape
  margin: 0

// bespoke.js layout styles

article
  transition: background slide_transition_length slide_transition_easing
  display: none
  &.bespoke-parent
    background #1f282d
    color #fff
    display: block
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    overflow: hidden
    @media print
      overflow: visible
      position: static
    perspective: 600px

.bespoke-slide
  transition: all slide_transition_length slide_transition_easing
  transform-origin: 50% 50% ((slide_width / 2) * -1)
  backface-visibility: hidden
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  width: slide_width
  height: slide_height
  position: absolute
  top: 0
  left: 0
  background: slide_background
  border-radius: 0
  @media print
    height: 743px // seems to correspond with an A4, landscape page height
    width: 100%
    page-break-before: always
    position: static
    margin: 0

.bespoke-before
  transform: translateX(slide_transition_translate_x * -1) rotateY(slide_transition_rotate_y * -1)

.bespoke-after
  transform: translateX(slide_transition_translate_x) rotateY(slide_transition_rotate_y)
  @media print
    transform: translateX(0) rotateY(0)

.bespoke-inactive
  opacity: 0
  pointer-events: none
  @media print
    opacity 1

.bespoke-active
  opacity: 1

// bespoke-bullet styles

.bespoke-bullet
  transition: all bullet_transition_length bullet_transition_easing

.bespoke-bullet-inactive
  opacity: 0
  li&
    transform: translateX(bullet_transition_translate_x)
  @media print
    opacity: 1

.bespoke-bullet-active
  opacity: 1

// bespoke-state styles

.emphatic,
.emphatic .bespoke-slide
  background: slide_background

// prism styles

code
  padding: 26px !important

// content styles

body
  font-family: helvetica, arial, sans-serif
  font-size: 24px
  color: #edf0f2

h1
  font-family Raleway
  font-size: 58px
  line-height: 82px
  letter-spacing: -2px
  margin-bottom: 16px
  text-transform uppercase

h2
  font-family Raleway
  font-size: 42px
  margin-bottom: 20px
  font-weight 900

h3
  font-family 'The Girl Next Door'
  font-size: 32px
  font-weight: bold
  margin-bottom: 10px
  color: #aaa

hr
  visibility: hidden
  height: 20px

ul
  list-style: none

li
  margin-bottom: 12px

p
  margin: 0 100px 12px
  line-height: 22px

a
  color: #fff
  text-decoration: none

section code[class*="language-"]
  background transparent
  border 0
  box-shadow none
  font-family "Ubuntu Mono"
  font-size 32px
  text-shadow none

.bg
  position absolute
  height 100%
  left 0
  width 100%
  top 0
  z-index 0

.overlay
  background rgba(0, 0, 0, 0.7)
  padding 20px 0
  width 100%
  z-index 1